<style>
  .product-box {
    display: flex;
    flex-wrap: wrap;
    padding-top: 25px;
    justify-content: space-around;
  }
  .product-card {
    display: flex;
    flex-direction: column-reverse;
    cursor: pointer;
    position: relative;
    transition: transform 10s;
    width: 255px;
  }
  .product-card-link {
    display: flex;
    flex-direction: column-reverse;
    text-decoration: none;
    position: relative;
  }


  .c-product-image {
    width: 100%;
    height: 285px;
    overflow: hidden;
    border-radius: 10px;
    position: relative;
    background-color: #f3f3f3;
    box-shadow: 0 0 4px 1px #bbbbbb;
  }
  .c-product-image img {
    width: 100%;
    height: auto;
    transition: transform 0.3s ease;
    position: absolute;
    top: 0;
    left: 0;
    size: cover;
    transform: scale(1.12);
  }
  p.p-price {
    font-family: 'Roboto', 'sans-serif';
    font-weight: 500;
    color: #195FC7;
    margin-bottom: 0;
  }
  .p-info {
    display: flex;
    flex-direction: column-reverse;
    width: 100%;
    height: 80px;
    justify-content: flex-end;
  }
  p.p-name {
    font-family: 'Roboto', 'sans-serif';
    font-weight: 500;
    margin: 10px 0 0;
    color: #404040;
  }
  a.collection--quickShop,
  .collection--addToCart {
    position: absolute;
    top: 140px;
    display: none;
    transform: scale(0.8);
  }
  .product-card:hover img {
    transform: scale(1.2);
    filter: blur(1.5px);
  }
  .product-card:hover a.collection--quickShop,
  .product-card:hover .collection--addToCart {
    display: block;
    transform: scale(1);
  }
  .product-card:hover .c-product-image::after {
    display: block;
  }
  .product-card:hover p.text--soldOut {
    display: none;
  }


  a.collection--quickShop {
    left: 18px;
    text-decoration: none;
    color: #195FC7;
    background: white;
    font-weight: 400;
    padding: 2px 4px;
    border: 2px solid rgb(255, 255, 255);
    font-weight: 500;
    letter-spacing: 0.2px;
    z-index: 3;
  }
  a.collection--quickShop:hover {
    box-shadow: 0 0 7px 0 lightgrey;
  }
  button.collection--addToCart:hover {
    box-shadow: 0 0 7px 0 #195FC7;
  }
  .collection--addToCart {
    right: 18px;
    border: none;
    color: white;
    background: #195FC7;
    padding: 3px 7px;
    z-index: 3;
  }
  .c-product-image::after {
    content: " ";
    background: #b3b3b35e;
    display: block;
    width: 100%;
    height: 100%;
    z-index: 1;
    position: relative;
    display: none;
  }



  /*Pagination styles*/
  .pagination--container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px 0;
  }
  span.page a {
    color: #2e2e2e;
    text-decoration: none;
  }
  span.page.current {
    color: black;
    border-bottom: 2px solid black;
    font-size: 18px;
    font-weight: 600;
    user-select: none;
  }
  span.page {
    font-weight: 400;
    margin-right: 14px;
    margin-left: 7px;
  }
  span.next a,
  span.prev a {
    color: #343434;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: 1px;
  }
  span.next a {
    margin-left: 10px;
  }
  span.prev a {
    margin-right: 10px;
  }
  p.text--soldOut {
    position: absolute;
    top: 0;
    right: 0;
    color: #020202;
    background: #e1e1e1;
    border-radius: 0 11px 0 14px;
    padding: 6px;
    font-size: 13px;
    font-family: 'Roboto', 'sans-serif';
  }
</style>

{% paginate collection.products by 15 %}
  <div class="product-box">
    {% for product in collection.products %}
      <div class="product-card">
        <a href="{{ product.url }}" class="product-card-link">
          <div class="p-info">
            <p class="p-price">{{ product.price | money }}</p>
            <p class="p-name">{{ product.title }}</p>
          </div>

          {% for image in product.images limit: 1 %}
            <div class="c-product-image">
              <img src="{{ image | img_url:"600x600" }}">
            </div>
          {% endfor %}
          <a href="{{ product.url }}" class="collection--quickShop">View Item</a>
          <button class="collection--addToCart">Add to cart</button>
          {% if product.available %}
            {% else %}
              <p class="text--soldOut">Sold Out</p>
          {% endif %}
        </a>
      </div>
    {% endfor %}
  </div>
  <div class="pagination--container">
    {{ paginate | default_pagination }}
  </div>
{% endpaginate %}