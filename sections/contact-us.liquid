<style>
  .contactUsForm {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 55px;
    padding-bottom: 60px;
    background-color: #F6F6F3;
    min-width: 380px;
  }
  .outside-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    margin-bottom: 33px;
  }
  p.contact-desc {
    text-align: center;
}
  .contact-us-form {
    display: flex;
    background-color: #040404;
    border-radius: 10px;
    width: 80vw;
    box-shadow: 0 0 10px 0px #040404;
    min-height: 470px;
  }
  h1.contact-title {
    margin-bottom: 13px;
  }
  .left-contact {
    background: rgb(255, 255, 255);
    color: #040404;
    border-radius: 10px;
    padding: 25px;
    flex: 1;
  }
  .left-header {
    margin-top: 10px;
  }
  h2 {
    font-family: 'Montserrat';
    font-weight: 600;
    font-size: 22px;
  }
  .left-inside p {
    font-family: 'Montserrat';
    font-size: 15px;
    font-weight: 550;
    line-height: 20px;
    margin: 0;
}
  .contact-location {
    margin-top: 65px;
  }
  .contact-location,
  .contact-phone,
  .contact-email {
    display: flex;
    margin-bottom: 43px;
  }
  .contact-location span,
  .contact-phone span,
  .contact-email span {
    padding-right: 16px;
  }

  .right-contact {
    padding: 35px 35px 0 50px;
    width: 55%;
    flex: 2;
    position: relative;
  }
  button {
    position: absolute;
    bottom: 54px;
    right: 7%;
    background: none;
    color: white;
    border: 1px solid white;
    padding: 17px 12px;
    border-radius: 27px;
  }
  button.button.contact-us-button {
    position: absolute;
    padding: 10px 13px;
}

  .input-inline,
  .input-beside {
    display: flex;
    align-items: center;
    margin-bottom: 55px;
  }
  .input.form__group.field {
    width: 48%;
  }
  .input.form__group.field.l-input,
  .input.form__group.field.s-input {
    margin-left: 4%;
  }

  textarea {
    resize: none;
  }
  .textarea.form__group.field {
    width: 100%;
  }

  .left-inside a {
    text-decoration: none;
    color: black;
    display: inline-flex;
}
  /* Sheesh */

  .form__group {
    position: relative;
    padding: 15px 0 0;
    width: 50%;
  }

  .form__field {
    font-family: inherit;
    border: 0;
    border-bottom: 2px solid #9b9b9b;
    outline: 0;
    font-size: 1.1rem;
    color: rgb(255, 255, 255);
    padding: 7px 0;
    background: transparent;
    transition: border-color 0.2s;
    width: 100%;
  }
  .form__field::placeholder {
    color: transparent;
  }
  .form__field:placeholder-shown ~ .form__label {
    font-size: 1.2rem;
    cursor: text;
    top: 26px;
  }

  .form__label {
    position: absolute;
    top: 0;
    display: block;
    transition: 0.2s;
    font-size: 1rem;
    color: #9b9b9b;
  }

  .form__field:focus {
    padding-bottom: 6px;
    font-weight: 500;
    border-width: 3px;
    border-image: linear-gradient(to right, #119DA4, #13505B);
    border-image-slice: 1;
  }
  .form__field:focus ~ .form__label {
    position: absolute;
    top: 0;
    display: block;
    transition: 0.2s;
    font-size: 1rem;
    color: #119DA4;
    font-weight: 700;
  }

  /* reset input */
  .form__field:required,
  .form__field:invalid {
    box-shadow: none;
  }


  @media(max-width:900px) {
    .contact-us-form {
    display: flex;
    flex-direction: column;
    width:90vw;

}
