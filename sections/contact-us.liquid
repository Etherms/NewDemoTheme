  }
</style>

{% assign emailAdd = section.settings.emailAdd %}
<div class="outside-container">
  <h1 class="contact-title">Contact Us</h1>
  <p class="contact-desc">Lorem ipsum dolor sit amet consectetur adipisicing elit. Autem, quos?</p>
</div>
<div class="contact-us-form">
  <div class="left-contact">
    <div class="left-header">
      <h2>Contact Information</h2>
      <p>Fill up the form and our Team will get back to you within 24 hours.</p>
    </div>
    <div class="contact-location left-inside">
      <a href="{{ section.settings.locationUrl }}">
        <span class="material-symbols-outlined">
          location_on
        </span>
        <p>Ewan street, Brgy Dimakita</p>
    </a>
      </div>
      <div class="contact-phone left-inside">
        <a href="{{ section.settings.phoneUrl }}">
          <span class="material-symbols-outlined">
            call
          </span>
          <p>(+63) 912-536-3214</p>
        </a>
      </div>
      <div class="contact-email left-inside">
        <a href="{{ section.settings.emailUrl }}">
          <span class="material-symbols-outlined">
            mail
          </span>
          <p>Sapatoes69@gmail.com</p>
        </a>
      </div>

    </div>
    <div class="right-contact">

      <form onsubmit="sendEmail(); reset(); return false;">
        <div class="input-inline">
          <div class="input form__group field r-input">
            <input
              type="text"
              placeholder="Name"
              id="name"
              class="form__field"
              required>
            <label for="name" class="label_name form__label">Name</label>
          </div>
          <div class="input form__group field l-input">
            <input
              type="email"
              placeholder="Email"
              id="email"
              class="form__field"
              required>
            <label for="email" class="label_email form__label">Email</label>
          </div>
        </div>
        <div class="input-beside">
          <div class="input form__group field p-input">
            <input
              type="tel"
              placeholder="Phone number"
              id="phone"
              class="form__field"
              required>
            <label for="phone" class="label_phone form__label">Phone</label>
          </div>
          <div class="input form__group field s-input">
            <input
              type="text"
              placeholder="Subject"
              id="subject"
              class="form__field"
              required>
            <label for="subject" class="label_subj form__label">Subject</label>
          </div>
        </div>
        <div class="textarea form__group field">
          <input
            id="message"
            class="form__field"
            rows="1"
            cols="50"
            placeholder="Message" required></input>

        <label for="textarea" class="label_textarea form__label">Message</label>
      </div>
      <button type="submit" class="button contact-us-button">Send Message <span class="material-symbols-outlined arrow-btn"> arrow_forward</span></button>
    </form>
  </div>
</div>

<script src="https://smtpjs.com/v3/smtp.js"></script>
