{% assign background = section.settings.background %}


<style>
  .collection-container {
    overflow: hidden;
  }
  .collection-title {
    width: 90%;
  }
  .collection-container h1 {
    text-transform: uppercase;
    font-family: 'Montserrat', 'sans-serif';
    text-align: start;
    letter-spacing: 3px;
  }
</style>
<div class="collection-container">
  <div
    class="collection-title"
    data-aos="zoom-in-right"
    data-aos-duration="2000">
    <h1>popular picks</h1>
  </div>
  <div
    class="grid-container"
    data-aos="flip-up"
    data-aos-duration="2500">
    {% for collection in shop.metaobjects.list_of_collections.values %}
      <div class="grid-item">
        <a href="{{collection.routes.all_products_collection_url}}"><img src="{{ collection.picture | img_url: '1000x' }}" alt="">
          <h2>{{ collection.name }}</h2>
        </a>
      </div>
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "List of collection",
    "tag": "section",
    "class": "collection",
    "settings": [
      {
        "type": "color_background",
        "id": "background",
        "label": "Background"
      }

    ],
    "presets": [
      {
        "name": "New-Collections"
      }
    ]
  }
{% endschema %}