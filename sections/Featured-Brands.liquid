<Style>
  .brandSectionContainer {
    min-width: 380px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .brandSectionContainer h1 {
    margin: 20px auto;
  }
  .allBrandsContainer {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    flex-wrap: wrap;
    width: 95vw;
    margin-bottom: 25px;
  }

  .brand-card img {
    width: 100px;
  }
  .white-brand-logo {
    display: none;
  }
</Style>

<div class="brandSectionContainer">
  <h1 data-aos="zoom-in" data-aos-duration="1500">{{ section.settings.featuredBrandid }}</h1>
  <div
    class="allBrandsContainer"
    data-aos="fade-up"
    data-aos-duration="1000">
    {% for block in section.blocks %}
      <div class="brand-card">
        <a href="{{ block.settings.brand_link }}">
          <img
            src="{{ block.settings.brand_logo | img_url: '1200x1200'}}"
            alt="{{ block.settings.brand_name }}"
            class="dark-brand-logo">
          <img
            src="{{ block.settings.second_brand_logo | img_url: '1200x1200' }}"
            alt="{{ block.settings.brand_name }}"
            class="white-brand-logo">
        </a>
      </div>
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "Featured Brands",
    "class": "featuredBrands",
    "settings": [
      {
        "type": "text",
        "id": "featuredBrandid",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "name": "Logo",
        "type": "logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "brand_logo",
            "label": "Dark Brand Image"
          }, {
            "type": "image_picker",
            "id": "second_brand_logo",
            "label": "White Brand Image"
          }, {
            "type": "text",
            "id": "brand_name",
            "label": "Brand Name"
          }, {
            "type": "url",
            "id": "brand_link",
            "label": "Brand Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Brands"
      }
    ]
  }
{% endschema %}